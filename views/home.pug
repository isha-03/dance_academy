extends base.pug

block scripts
  script(src='/static/index.js')

block style     
    style
      include ../static/style.css

block content 
    section#introSection
        | Dance is the hidden language of the soul.
    section#missionSection 
        h2 Our mission
        div.card 
          h3 To provide professional dance instruction
          div.card-box 
            div.card-img 
              img(src="/static/card1.jpg")
            div.card-content 
              p Professional dance trainers with 5+ years of experience.
        div.card 
          h3 To instill a great love of dance
          div.card-box 
            div.card-img 
              img(src="/static/card4.jpg")
            div.card-content 
              p Dance is not just an activity its a form of art and a way to express emotions.
        div.card 
          h3 To perform dances as a sport
          div.card-box 
            div.card-img 
              img(src="/static/card3.jpg")
            div.card-content 
              p Best aerobics classes full of enthusiasm, energy and well experienced trainers.
    section#sponsorsSection 
        h2 Our Sponsors
        div#sponsors 
          img(src="/static/sponsor1a.webp", alt="sponsor image", class="spimg") 
          img(src="/static/sponsor2a.png", alt="sponsor image", class="spimg") 
          img(src="/static/sponsor3b.png", alt="sponsor image", class="spimg") 
          img(src="/static/sponsor4e.png", alt="sponsor image", class="spimg") 
          
    script
      include ../static/script.js